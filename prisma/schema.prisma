generator client {
  provider = "prisma-client-js"
}

model Task {
  id                Int      @id @default(autoincrement())
  title             String
  body              String
  created_date      DateTime
  min_delivery_date DateTime
  max_delivery_date DateTime
  image_url         String?
  completed         Boolean
  author            User     @relation(fields: [idUser], references: [id])
  idUser            Int
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  password     String
  email        String   @unique
  created_date DateTime
  tasks        Task[]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
